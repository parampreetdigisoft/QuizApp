<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizMaster</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizApp.UI.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        /* Navbar Styling */
        .navbar {
            background: linear-gradient(90deg, #4f46e5, #3b82f6);
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.3rem;
            color: #fff !important;
            display: flex;
            align-items: center;
        }

            .navbar-brand span {
                font-size: 1.6rem;
                margin-right: 0.5rem;
            }

        .navbar-nav .nav-link {
            color: #e0e7ff !important;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #fff !important;
                transform: scale(1.05);
            }

        .navbar .btn-logout {
            background: rgba(255, 255, 255, 0.15);
            border: none;
            color: #fff;
            font-weight: 500;
            border-radius: 8px;
            padding: 5px 12px;
            margin-left: 10px;
            transition: all 0.3s ease;
        }

            .navbar .btn-logout:hover {
                background: rgba(255, 255, 255, 0.25);
                transform: scale(1.05);
            }

        /* Main Content */
        main {
            padding-top: 1rem;
            padding-bottom: 2rem;
            animation: fadeIn 0.4s ease-in;
        }

        /* Footer */
        footer {
            background: #111827;
            color: #9ca3af;
            font-size: 0.9rem;
            padding: 1rem 0;
            text-align: center;
        }

            footer a {
                color: #818cf8;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Animations */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="UserDashboard" asp-action="Index">
                    <span>🎯</span> QuizMaster
                </a>
                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
                        </li> *@
                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex align-items-center">
                            <span class="text-light me-2">👋 Welcome, <strong>@User.Identity.Name</strong></span>
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-logout">Logout</a>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-sm fw-semibold">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
