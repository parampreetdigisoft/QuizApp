<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Quiz Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


    <!-- ✅ jQuery (must come first) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Bootstrap 5 bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    

</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-toggler bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-action="Index" asp-controller="AdminDashboard">Quiz Dashboard</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li><a class="nav-link text-white" asp-action="ManageUsers" asp-controller="Admin">Users</a></li>
                    <li><a class="nav-link text-white" asp-action="ManageQuizzes" asp-controller="Admin">Quizzes</a></li>
                </ul>
                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)


</body>
</html>
